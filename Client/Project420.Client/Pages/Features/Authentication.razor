@page "/Features/Authentication/{Action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<RemoteAuthenticatorView Action="@Action" ApplicationPaths="@paths">
    <LoggingIn>
        <CenterProgressCircular />
    </LoggingIn>
    <CompletingLoggingIn>
        <CenterProgressCircular />
    </CompletingLoggingIn>
    <LogOut>
        <CenterProgressCircular />
    </LogOut>
</RemoteAuthenticatorView>

@code {
    [Parameter]
    public string? Action { get; set; }

    RemoteAuthenticationApplicationPathsOptions paths = new()
        {
            LogOutSucceededPath = "Features",
            LogInFailedPath = "Features/Authentication/Login-Failed"
        };
}

